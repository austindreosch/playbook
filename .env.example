# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/playbook?retryWrites=true&w=majority

# MySportsFeeds API Configuration
MYSPORTSFEEDS_API_KEY=your_mysportsfeeds_api_key_here
MYSPORTSFEEDS_API_VERSION=v2.1
MYSPORTSFEEDS_NBA_SEASON=2024-2025-regular
MYSPORTSFEEDS_NFL_SEASON=2024-2025-regular
MYSPORTSFEEDS_MLB_SEASON=2025-regular
MYSPORTSFEEDS_MLB_PROJECTION_SEASON=2025-regular

# Application URLs
NEXTAUTH_URL=https://your-app-domain.vercel.app
# For local development: NEXTAUTH_URL=http://localhost:3000

# Cron Job Security
CRON_SECRET=your_secure_random_cron_secret_here
INTERNAL_API_SECRET=your_secure_random_internal_api_secret_here
ADMIN_SECRET=your_secure_random_admin_secret_here

# Auth0 Configuration (if used)
AUTH0_SECRET=your_auth0_secret
AUTH0_BASE_URL=https://your-app-domain.vercel.app
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_CLIENT_ID=your_auth0_client_id
AUTH0_CLIENT_SECRET=your_auth0_client_secret